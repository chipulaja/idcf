{
    "name": "chipulaja/idcf",
    "description": "Inverted Document Class Frequency",
    "keywords": ["idcf", "classification"],
    "license": "MIT",
    "authors": [
        { "name": "chipulaja", "email": "chipul.aja@gmail.com" }
    ],
    "minimum-stability": "stable",
    "require": {
        "sastrawi/sastrawi": "^1.2",
        "symfony/console": "^4.3",
        "nette/finder": "^2.5",
        "symfony/yaml": "^4.3"
    },
    "autoload": {
        "psr-4": {
            "IDCF\\": "src/IDCF/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^8.3",
        "squizlabs/php_codesniffer": "^3.4"
    },
    "scripts": {
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
